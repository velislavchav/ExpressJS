<section>
    <h2>Edit article</h2>
    {{>notifications}}
    <div class="spacer">
        <form action="/edit/{{article._id}}" method="POST">
            <label>Article title</label>
            <h3>{{article.title}}</h3>
            <label>Content</label>
            <textarea name="content"> {{article.content}} </textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>